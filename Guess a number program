print("Welcome into guess the number game")
desired_number = 35
num_of_guesses = 9
tries = 1
print("Enter your number")
entered_num = int(input())
while True:
    if num_of_guesses >=1:
        if entered_num > desired_number:
            print("Desired number is less then entered number")
            print("Your have", num_of_guesses, "left")
            num_of_guesses = num_of_guesses - 1
            tries = tries + 1
            entered_num = int(input())
            continue
        elif entered_num < desired_number:
            print("Desired number is greater then entered number")
            print("Your have", num_of_guesses, "left")
            num_of_guesses = num_of_guesses - 1
            tries = tries + 1
            entered_num = int(input())
            continue
        elif entered_num == desired_number:
            print("Congratulation you have guessed the right number")
            if tries == 1:
                print("You guessed the number in", tries, "try")
            else:
                print("You guessed the number in", tries, "tries")
            tries = tries + 1
            break
    elif num_of_guesses == 0:
        print("You have consumed all chances you have\n"
              "Better luck next time")
        print("Game over")
        break
    else:
        print("")
