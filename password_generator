import string
import random
print('How many characters you want in the password\n'
      'It should be more then 10 or less then 30 characters')
user_input = int(input()) - 3
while user_input <= 10 or user_input >= 30:
    print('It should be more then 10 or less then 30 characters')
    user_input = int(input())
low_case = string.ascii_lowercase
upper_case = string.ascii_uppercase
special = string.punctuation
number = string.digits
list_string = [upper_case, low_case, number]
list_password = []


def password_gen(user_int, lis):
    counter = 0
    while counter < user_int:
        counter += 1
        choice = random.choice(list_string)
        out = random.choice(choice)
        lis.append(out)
    for i in range(2):
        b = random.choice(special)
        lis.append(b)
    b = ' '
    lis.append(b)
    random.shuffle(list_password)
    print('Generated strong password is:')
    for i in list_password:
        print(i, end='')


if __name__ == '__main__':
    password_gen(user_input, list_password)
